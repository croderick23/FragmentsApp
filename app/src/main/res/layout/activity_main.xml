<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentContenedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnNavigationPrincipal" /> //la pantalla queda arriba del menu estatico como youtube


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btnNavigationPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/purple_700"
        app:menu="@menu/menu_navigation_botom" />



</RelativeLayout>